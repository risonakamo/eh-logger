{
    "manifest_version":2,
    "name":"EH Logger",
    "short_name":"ehlogger",
    "description":"EH dedicated logging system",
    "version":"1.0.0",
    "homepage_url":"https://github.com/risonakamo/eh-logger",

    "permissions":[
        "tabs",
        "storage",
        "downloads",
        "https://nhentai.net/g/*",
        "https://imgur.com/a/*",
        "https://hitomi.la/doujinshi/*",
        "https://hitomi.la/cg/*",
        "https://hitomi.la/gamecg/*",
        "https://www.dlsite.com/maniax/work/*",
        "https://chan.sankakucomplex.com/?tags=*",
        "https://beta.sankakucomplex.com/?tags=*",
        "https://www.pixiv.net/users/*",
        "https://exhentai.org/g/*"
    ],

    "browser_action":{
        "default_popup":"popup/popup-index.html"
    },

    "icons":{
        "16":"icons/16.png",
        "48":"icons/48.png",
        "128":"icons/128.png"
    }
}